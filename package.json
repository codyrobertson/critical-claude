{
  "name": "critical-claude",
  "version": "2.6.1",
  "type": "module",
  "description": "Production-ready task management CLI with unified Claude Code integration via MCP. Features bidirectional TodoWrite sync, centralized hook system, and AI-powered task analysis.",
  "private": false,
  "preferGlobal": true,
  "bin": {
    "critical-claude": "./bin/critical-claude.js",
    "cc": "./bin/cc.js"
  },
  "files": [
    "bin/",
    "domains/*/dist/**/*",
    "infrastructure/*/dist/**/*",
    "applications/*/dist/**/*",
    "shared/",
    "scripts/",
    "README.md",
    "tsconfig.json",
    "tsconfig.base.json"
  ],
  "scripts": {
    "build": "npx tsc",
    "clean": "rm -rf dist/",
    "dev": "npm run build && node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "postinstall": "node scripts/postinstall.js",
    "preuninstall": "node scripts/cleanup.js"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@vitest/ui": "^3.2.4",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/critical-claude/critical-claude.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "homepage": "https://critical-claude.github.io/critical-claude/",
  "bugs": {
    "url": "https://github.com/critical-claude/critical-claude/issues"
  },
  "keywords": [
    "claude-code",
    "mcp",
    "model-context-protocol",
    "todo-sync",
    "task-management",
    "unified-hooks",
    "ai-integration",
    "critical-claude",
    "cli",
    "development-tools",
    "bidirectional-sync",
    "production-ready"
  ],
  "author": "Critical Claude Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.61",
    "@types/marked": "^5.0.2",
    "marked": "^16.1.1",
    "toml": "^3.0.0"
  }
}
