{
  "name": "@critical-claude/workspace",
  "version": "1.0.0",
  "description": "Critical Claude MCP Services - A comprehensive code analysis and development toolkit",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "dev": "npm run dev --workspaces",
    "start:all": "concurrently \"npm run start --workspace=@critical-claude/code-critique\" \"npm run start --workspace=@critical-claude/project-management\" \"npm run start --workspace=@critical-claude/prompt-management\" \"npm run start --workspace=@critical-claude/web-search\" \"npm run start --workspace=@critical-claude/system-design\" \"npm run start --workspace=@critical-claude/data-flow\" \"npm run start --workspace=@critical-claude/backlog-integration\"",
    "start:code-critique": "npm run start --workspace=@critical-claude/code-critique",
    "start:project-management": "npm run start --workspace=@critical-claude/project-management", 
    "start:prompt-management": "npm run start --workspace=@critical-claude/prompt-management",
    "start:web-search": "npm run start --workspace=@critical-claude/web-search",
    "start:system-design": "npm run start --workspace=@critical-claude/system-design",
    "start:data-flow": "npm run start --workspace=@critical-claude/data-flow",
    "start:backlog": "npm run start --workspace=@critical-claude/backlog-integration",
    "install:all": "npm install",
    "setup": "npm run install:all && npm run build",
    "docs": "npm run docs --workspaces",
    "bootstrap": "npm run setup && npm run test",
    "migrate": "tsx scripts/migrate-to-monorepo.ts migrate",
    "rollback": "tsx scripts/migrate-to-monorepo.ts rollback"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/critical-claude/critical-claude.git"
  },
  "keywords": [
    "mcp",
    "code-review",
    "analysis",
    "claude",
    "ai",
    "development",
    "tools"
  ],
  "author": "Critical Claude Team",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}