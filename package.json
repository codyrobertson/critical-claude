{
  "name": "critical-claude",
  "version": "2.0.0",
  "description": "Production-ready task management CLI with unified Claude Code integration via MCP. Features bidirectional TodoWrite sync, centralized hook system, and AI-powered task analysis.",
  "private": false,
  "preferGlobal": true,
  "bin": {
    "critical-claude": "./bin/critical-claude.js",
    "cc": "./bin/cc.js"
  },
  "files": [
    "bin/",
    "packages/critical-claude/dist/",
    "packages/critical-claude/package.json",
    "scripts/",
    "README.md"
  ],
  "scripts": {
    "build": "cd packages/critical-claude && npm run build",
    "lint": "cd packages/critical-claude && npm run lint",
    "typecheck": "cd packages/critical-claude && npm run typecheck",
    "clean": "cd packages/critical-claude && npm run clean",
    "dev": "cd packages/critical-claude && npm run dev",
    "start": "cd packages/critical-claude && npm run start",
    "install:all": "cd packages/critical-claude && npm install",
    "setup": "npm run install:all && npm run build",
    "postinstall": "node scripts/postinstall.js",
    "preuninstall": "node scripts/cleanup.js",
    "build:prod": "npm run clean && npm run build && npm run typecheck",
    "deploy": "npm run build:prod && npm publish --access public"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/critical-claude/critical-claude.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "homepage": "https://critical-claude.github.io/critical-claude/",
  "bugs": {
    "url": "https://github.com/critical-claude/critical-claude/issues"
  },
  "keywords": [
    "claude-code",
    "mcp",
    "model-context-protocol",
    "todo-sync",
    "task-management",
    "unified-hooks",
    "ai-integration",
    "critical-claude",
    "cli",
    "development-tools",
    "bidirectional-sync",
    "production-ready"
  ],
  "author": "Critical Claude Team",
  "license": "MIT",
  "dependencies": {
    "toml": "^3.0.0"
  }
}
