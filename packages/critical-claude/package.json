{
  "name": "critical-claude",
  "version": "2.1.3",
  "description": "Enterprise-grade task management CLI with AI-powered automation. Features task templates, multi-agent research, dependency management, and Claude Desktop integration via MCP.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cc": "dist/cli/cc-main.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "npm run build && node dist/mcp-server.js",
    "cli": "npm run build && node dist/cli/cc-main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:critical": "vitest run src/tests/critical-path.test.ts src/tests/mcp-integration.test.ts",
    "test:integration": "vitest run src/tests/mcp-integration.test.ts",
    "test:unit": "vitest run src/tests/critical-path.test.ts",
    "test:claude": "npm run build && node dist/cli/test-claude.js",
    "test:simple": "npm run build && node dist/cli/simple-test.js",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "viewer": "cd ../.. && node packages/critical-claude/dist/viewer/index.js"
  },
  "dependencies": {
    "@critical-claude/core": "file:../core",
    "@critical-claude/data-flow": "file:../data-flow",
    "@critical-claude/system-design": "file:../system-design",
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "date-fns": "^2.30.0",
    "figlet": "^1.7.0",
    "glob": "^10.3.10",
    "ink": "^6.0.1",
    "inquirer": "^9.2.12",
    "nanospinner": "^1.1.0",
    "ora": "^7.0.1",
    "react": "^19.1.0",
    "toml": "^3.0.0",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/figlet": "^1.5.8",
    "@types/inquirer": "^9.0.7",
    "@types/marked": "^5.0.2",
    "@types/node": "^22.10.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.57.0",
    "typescript": "^5.7.3",
    "vitest": "^1.6.1"
  },
  "keywords": [
    "task-management",
    "ai-powered",
    "project-templates",
    "dependency-management",
    "multi-agent",
    "claude-desktop",
    "mcp",
    "model-context-protocol",
    "cli",
    "developer-tools",
    "automation",
    "openai",
    "anthropic",
    "critical-claude"
  ],
  "author": "Critical Claude Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/critical-claude/critical-claude.git",
    "directory": "packages/critical-claude"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "homepage": "https://critical-claude.github.io/critical-claude/",
  "bugs": {
    "url": "https://github.com/critical-claude/critical-claude/issues"
  }
}
